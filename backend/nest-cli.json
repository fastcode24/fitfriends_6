{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "backend/src/main",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "assets/**/*",
        "outDir": "dist/backend/assets"
      },
      {
        "include": "public/**/*",
        "outDir": "dist/backend/public"
      }
    ]
  }
}
